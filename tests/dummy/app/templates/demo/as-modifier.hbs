<div id="header" class="section">
  <img src="https://alexfox.dev/laxxx/img/l.png" alt="L of laxxx" style="width: 103pt; margin-left: 26pt; margin-bottom: -4pt;" {{lax translate-x="0 0, vh 200" optimize="true"}} />
  <img src="https://alexfox.dev/laxxx/img/a.png" alt="A of laxxx" {{lax translate-x="0 0, vh -200" optimize="true"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" {{lax opacity="0 1, (0.8*vh) 0"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" style="margin-top: -79pt" {{lax translate-y="0 0, vh 200" opacity="0 1, (0.8*vh) 0"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" style="margin-top: -79pt" {{lax translate-y="0 0, vh 400" opacity="0 1, (0.8*vh) 0"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" style="margin-top: -79pt" {{lax translate-y="0 0, vh 600" opacity="0 1, (0.8*vh) 0"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" style="margin-top: -79pt" {{lax translate-y="0 0, vh 800" opacity="0 1, (0.8*vh) 0"}} />
  <img src="https://alexfox.dev/laxxx/img/x.png" alt="X of laxxx" style="margin-top: -79pt" {{lax translate-y="0 0, vh 1000" opacity="0 1, (0.8*vh) 0"}} />
  <h2 {{lax scale="0 1, vh 0.2" translate-y="0 0, vh 1200" opacity="0 1, (vh*0.5) 0"}}>awesum scroll effects</h2>

  <h4 {{lax opacity="0 1, (vh*0.05) 0"}}>scroll down</h4>
  <i class="fas fa-chevron-down" {{lax opacity="0 1, (vh*0.1) 0" translate-y="0 0, 200 100"}}></i>
</div>


<div id="section1" class="section">
  <div class="left">
    <div class="bubble a"
      style="background: #EDD943"
      {{lax preset="lazy-250"}}
    ></div>

    <div class="bubble c"
      style="background: #ED2471; margin-left: 80pt"
      {{lax preset="lazy-100"}}
    ></div>

    <div class="bubble b"
      style="background: #35D5E5; margin-left: 160pt"
      {{lax preset="lazy-300"}}
    ></div>

    <h3 {{lax preset="driftRight" optimize="true"}} class="chunkyText" style="color: #35D5E5;">oooh!</h3>
  </div>

  <div class="right">
    <div class="bubble a"
      style="background: #35D5E5; margin-left: 120pt"
      {{lax preset="lazy-200"}}
    ></div>

    <div class="bubble c"
      style="background: #EDD943; margin-left: -20pt"
      {{lax preset="lazy-150"}}
    ></div>

    <div class="bubble b"
      style="background: #ED2471; margin-left: 20pt; margin-top: 200pt"
      {{lax preset="lazy-350"}}
    ></div>
    <h3 {{lax optimize="true" preset="driftLeft"}} class="chunkyText" style="color: #ED2471; margin-top: 200pt;">aaah!</h3>
  </div>

  <h3 {{lax preset="crazy zoomInOut" optimize="true"}} class="crazyText">sooo crazy</h3>
</div>

<div id="section2" class="section">
  <div class="blockContainer" {{lax preset="leftToRight-1.1 fadeInOut"}}>
    <div class="block"
      style="background: #35D5E5;"
      {{lax preset="spin"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.2 fadeInOut"}}>
    <div class="block"
      style="background: #EDD943; margin-top: -50pt; margin-left: -50pt; width: 40pt; height: 40pt;"
      {{lax preset="spinRev-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.4 fadeInOut"}}>
    <div class="block"
      style="background: #ED2471; margin-top: -90pt; margin-left: -0pt;"
      {{lax preset="spin-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.5 fadeInOut"}}>
    <div class="block"
      style="background: #EDD943; margin-top: 70pt; margin-left: -150pt; width: 40pt; height: 40pt;"
      {{lax preset="spinRev-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.3 fadeInOut"}}>
    <div class="block"
      style="background: #EDD943; margin-top: 100pt; margin-left: -60pt; width: 25pt; height: 25pt;"
      {{lax preset="spin-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.05 fadeInOut"}}>
    <div class="block"
      style="background: #ED2471; margin-top: -30pt; margin-left: -70pt;"
      {{lax preset="spin"}}
    ></div>
  </div>

  <h3 {{lax preset="leftToRight-0.8 speedy" optimize="true"}} class="chunkyText" style="
                       color: #white; position: absolute; margin-top: -20pt; margin-left: -100pt">
    wheee!
  </h3>

  <div class="blockContainer" {{lax preset="leftToRight-1.15 fadeInOut"}}>
    <div class="block"
      style="background: #35D5E5; margin-top: -70pt; margin-left: -20pt; width: 40pt; height: 40pt;"
      {{lax preset="spinRev-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.45 fadeInOut"}}>
    <div class="block"
      style="background: #ED2471; margin-top: -50pt; margin-left: -50pt; width: 25pt; height: 25pt;"
      {{lax preset="spin-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.5 fadeInOut"}}>
    <div class="block"
      style="background: #35D5E5; margin-top: 30pt; margin-left: -20pt;"
      {{lax preset="spinRev-500"}}
    ></div>
  </div>

  <div class="blockContainer" {{lax preset="leftToRight-1.25 fadeInOut"}}>
    <div class="block"
      style="background: #ED2471; margin-top: 80pt; margin-left: -10pt;"
      {{lax preset="spin-500"}}
    ></div>
  </div>
</div>

